{
  "manifest_version": 3,
  "name": "Calendar Event Creator",
  "version": "1.1.0",
  "description": "Create Google Calendar events from selected text using OpenAI API",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "notifications"
  ],
  "oauth2": {
    "client_id": "585728787132-5lr12sgh84a5lrl9b7p2kkoj4iqnc2dq.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}